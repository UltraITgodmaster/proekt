<Window x:Class="proekt.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proekt"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF0C00FF" Offset="0"/>
                <GradientStop Color="#FF0C00FF" Offset="1"/>
                <GradientStop Color="Lime" Offset="0.43"/>
                <GradientStop Color="#FF00FF0C" Offset="0.62"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Canvas>
            <Button x:Name="Win1" Canvas.Left="86" Canvas.Top="114" Height="50" Width="100" Content="Win1" Click="Win1_Click"></Button>
            <Button x:Name="Win2" Canvas.Left="214" Canvas.Top="114" Height="50" Width="100" Content="Win2" Click="Win2_Click"></Button>
        </Canvas>
    </Grid>
</Window>
